  <body>
    <!-- vertical-center -->
  	<div class="vertical-center">
      <div class="container fill-screen">
        <div id="msgarea" class='scroll' style="margin: 0px; margin-bottom: 2px;">
          <div id="messages"></div><br/>
        </div>
        <form id="messageform" action="">
